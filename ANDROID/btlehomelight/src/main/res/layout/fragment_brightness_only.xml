<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

  <com.larswerkman.holocolorpicker.ValueBar
      android:id="@+id/brightnessValueBar"
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:layout_marginBottom="30dp"
      android:layout_marginLeft="35dp"
      android:layout_marginRight="25dp"
      android:layout_marginTop="30dp"
      app:bar_orientation_horizontal="false"
      app:bar_pointer_halo_radius="40dp"
      app:bar_pointer_radius="35dp"
      app:bar_thickness="45dp"/>


  <TextView
      android:id="@+id/brightnessHeaderTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:text="@string/brigtness_header"
      android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>
