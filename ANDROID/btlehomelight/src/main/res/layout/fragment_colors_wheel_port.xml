<LinearLayout android:id="@+id/colorWeelLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">


    <de.dmarcini.bt.homelight.views.ColorPicker
        android:id="@+id/colorPicker"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"/>

    <LinearLayout
        android:id="@+id/accLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/RGBWToggleButton"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="RGBW Mischung"
            android:labelFor="@id/RGBWToggleButton"
            android:text="RGBW"
            android:textOff="nur RGB"
            android:textOn="RGBW"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#70001eff"
            android:columnCount="2"
            android:rowCount="2">

            <ImageView
                android:id="@+id/imageViewRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:layout_row="0"
                android:background="#ff0000"
                android:maxHeight="60dp"
                android:maxWidth="60dp"
                android:minHeight="40dp"
                android:minWidth="40dp"/>

            <ImageView
                android:id="@+id/imageViewGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:layout_row="0"
                android:background="#00ff00"
                android:maxHeight="60dp"
                android:maxWidth="60dp"
                android:minHeight="40dp"
                android:minWidth="40dp"/>

            <ImageView
                android:id="@+id/imageViewBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_row="1"
                android:background="#0000ff"
                android:maxHeight="60dp"
                android:maxWidth="60dp"
                android:minHeight="40dp"
                android:minWidth="40dp"/>

            <ImageView
                android:id="@+id/imageViewWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="20dp"
                android:layout_row="1"
                android:background="#ffffff"
                android:maxHeight="60dp"
                android:maxWidth="60dp"
                android:minHeight="40dp"
                android:minWidth="40dp"/>
        </GridLayout>
    </LinearLayout>

