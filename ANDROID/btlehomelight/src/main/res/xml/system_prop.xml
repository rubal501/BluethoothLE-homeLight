<PreferenceScreen android:id="@+id/conf_prog_preferencescreen"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="@string/preference_system_headline">


  <PreferenceCategory android:key="keySystemDirectControl"
      android:title="@string/preference_system_direct_control">
  <SwitchPreference
  android:defaultValue="true"
      android:key="keySystemDirectControlSwitch"
      android:summaryOff="@string/preference_system_direct_control_summary_off"
      android:summaryOn="@string/preference_system_direct_control_summary_on"
      android:switchTextOff="@string/preference_system_direct_control_switch_off"
      android:switchTextOn="@string/preference_system_direct_control_switch_on"
      android:title="@string/app_dummy_text" />

  </PreferenceCategory>

</PreferenceScreen>

